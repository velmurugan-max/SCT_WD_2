<body>
  <h1>Calculator</h1>
  <p id="ip">0</p>

  <main>
    <button class="button" onclick="calc(event)">9</button>
    <button class="button" onclick="calc(event)">8</button>
    <button class="button" onclick="calc(event)">7</button>
    <button class="button operator" onclick="calc(event)">-</button>
    <button class="button operator" onclick="calc(event)">/</button>

    <br />
    <button class="button" onclick="calc(event)">6</button>
    <button class="button" onclick="calc(event)">5</button>
    <button class="button" onclick="calc(event)">4</button>
    <button class="button operator" onclick="calc(event)">+</button>
    <button class="button operator" onclick="calc(event)">*</button>

    <br />
    <button class="button" onclick="calc(event)">3</button>
    <button class="button" onclick="calc(event)">2</button>
    <button class="button" onclick="calc(event)">1</button>
    <button class="button utility" onclick="calc(event)">0</button>
    <button class="button utility" onclick="calc(event)">.</button>

    <br />
    <button class="button utility" onclick="undo1()">Back</button>
    <button class="button utility" onclick="clear1()">Clear</button>
    <button class="button" id="equal" onclick="calculate()">=</button>
  </main>

  <script>
    const i = document.getElementById("ip");

    function calc(event) {
      if (i.textContent === "0") i.textContent = "";
      i.append(event.target.textContent);
    }

    function calculate() {
      try {
        i.textContent = eval(i.textContent);
      } catch {
        i.textContent = "Error";
      }
    }

    function clear1() {
      i.textContent = "0";
    }

    function undo1() {
      i.textContent = i.textContent.slice(0, -1);
    }
  </script>
